/**
 * Product description template
 *
 * @see Mage_Catalog_Block_Product_View_Description
 */
?>
<?php $_description = $this->getProduct()->getDescription(); ?>
<?php if ($_description): ?>
    <h2><?php echo $this->__('Details') ?></h2>
    <div class="std">
        <?php 
			$des = $this->helper('catalog/output')->productAttribute($this->getProduct(), $_description, 'description');
			if(strlen($des)>400)
			{
				$first = substr($des, 0, 400);
				$second = substr($des, 401, strlen($des));
				echo $first.'<a id="btn-show" href="javascript:" onClick="showDetail();">  more...</a><span id="show-hide" style="display:none;">'.$second.'</span><a id="btn-hide" style="display:none;" href="javascript:"  onClick="hideDetail();"> ...less</a>';
			}
			else { echo $des;  }
		//echo $this->helper('catalog/output')->productAttribute($this->getProduct(), $_description, 'description');
		
		?>
    </div>
<?php endif; ?>
<script type="text/javascript">
function showDetail()
{
	document.getElementById('btn-show').style.display = 'none';
	document.getElementById('show-hide').style.display = 'inline';
	document.getElementById('btn-hide').style.display = 'inline';
}
function hideDetail()
{
	document.getElementById('btn-show').style.display = 'inline';
	document.getElementById('show-hide').style.display = 'none';
	document.getElementById('btn-hide').style.display = 'none';
}
</script>